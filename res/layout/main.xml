<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_white" android:layout_gravity="fill_horizontal">



<LinearLayout android:id="@+id/LinearLayout01" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_width="fill_parent"><TextView android:id="@+id/TextView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Min" android:layout_gravity="bottom" android:padding="5px" android:textColor="#000000"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="20.00" android:height="50px" android:layout_gravity="center" android:id="@+id/WaitingTime" android:textColor="#f00000" android:background="#000000" android:width="120px" android:textSize="50px" android:gravity="right"></TextView>
<LinearLayout android:id="@+id/LinearLayout02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical" android:layout_gravity="bottom"><TextView android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Waiting Time" android:layout_gravity="top" android:padding="5px" android:width="100px" android:textColor="#000000"></TextView><TextView android:id="@+id/TextView04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sec." android:textColor="#000000"></TextView>
</LinearLayout><ImageView android:id="@+id/ImageView01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/separator"></ImageView>

<TextView android:id="@+id/TextView05" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Distance" android:padding="5px" android:textColor="#000000" android:layout_gravity="center"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="05.0" android:height="50px" android:id="@+id/Distance" android:textSize="50px" android:width="120px" android:background="#000000" android:textColor="#F00000" android:gravity="right"></TextView>
<TextView android:id="@+id/TextView07" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Km" android:textColor="#000000"></TextView>
</LinearLayout>



<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="10px"><ImageView android:id="@+id/ImageView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/androiddev" android:paddingRight="30px"></ImageView><TextView android:id="@+id/TextView08" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fare Rs." android:textColor="#000000" android:layout_gravity="center" android:textStyle="bold" android:padding="5px"></TextView><TextView android:layout_height="wrap_content" android:text="25.00" android:padding="5px" android:id="@+id/Fare" android:height="70px" android:width="170px" android:background="#000000" android:textColor="#F00000" android:layout_width="wrap_content" android:layout_weight="2" android:gravity="right" android:textSize="65px"></TextView>
<TextView android:id="@+id/TextView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="PS." android:textColor="#000000"></TextView>

</LinearLayout>

<LinearLayout android:id="@+id/LinearLayout04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center" android:layout_weight="1" android:layout_gravity="fill_horizontal">

<ToggleButton android:layout_width="wrap_content" android:layout_height="wrap_content" android:width="100px" android:textOff="Vacant" android:textOn="Hired" android:text="Vacant/Hired" android:id="@+id/VacantHiredButton"></ToggleButton>

<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Stop" android:width="100px" android:height="15px" android:id="@+id/StopButton"></Button>
</LinearLayout>


</LinearLayout>
